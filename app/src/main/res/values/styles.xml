<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="MaterialDrawerTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/md_blue_grey_700</item>
        <item name="android:colorBackground">@color/colorAccent</item>
        <item name="android:textColorHint">@color/colorGrey</item>
    </style>

    <style name="largeTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/app_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/largeTextSize</item>
    </style>

</resources>
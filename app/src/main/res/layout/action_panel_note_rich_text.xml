<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet_rich_text"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorGrey"
    android:orientation="horizontal"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_text_bold"
                android:layout_width="@dimen/text_edit_button_width"
                android:layout_height="@dimen/text_edit_button_height"
                android:layout_margin="@dimen/app_margin"
                android:text="B"
                android:textSize="@dimen/largeTextSize"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_text_italic"
                android:layout_width="@dimen/text_edit_button_width"
                android:layout_height="@dimen/text_edit_button_height"
                android:layout_margin="@dimen/app_margin"
                android:text="I"
                android:textSize="@dimen/largeTextSize"
                android:textStyle="italic" />

            <Button
                android:id="@+id/button_text_underlined"
                android:layout_width="@dimen/text_edit_button_width"
                android:layout_height="@dimen/text_edit_button_height"
                android:layout_margin="@dimen/app_margin"
                android:text="@string/u_text"
                android:textSize="@dimen/largeTextSize" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/button_text_right"
                android:layout_width="@dimen/text_edit_button_width"
                android:layout_height="@dimen/text_edit_button_height"
                android:layout_margin="@dimen/app_margin" />

            <ImageButton
                android:id="@+id/button_text_center"
                android:layout_width="@dimen/text_edit_button_width"
                android:layout_height="@dimen/text_edit_button_height"
                android:layout_margin="@dimen/app_margin" />

            <ImageButton
                android:id="@+id/button_text_left"
                android:layout_width="@dimen/text_edit_button_width"
                android:layout_height="@dimen/text_edit_button_height"
                android:layout_margin="@dimen/app_margin" />

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>